{% extends 'base.html.twig' %}


{% block body %}
    <!-- Titre de page -->
    <center><h1>Bonjour vous Ãªtes sur la {{ controller_name }} ! </h1></center>
    
    <!--Tableau de tous les stages -->
    <table class="table table-bordered border-dark table-Secondary table-striped">
        <thead>
            <tr>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <td>
                            <h2> 
                                Titre 
                            </h2>
                        </td>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <td>
                            <h2> 
                                Nom de l'entreprise 
                            </h2>
                        </td>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <td>
                            <h2>
                                Formations
                            </h2>
                        </td>
                    </div>
                </div>
            </tr>
        </thead>
        {% for stage in stages %}
            <tbody>
                <tr>
                    <div class="row">
                        <div class="col-md-4 col-xs-12">
                            <td>
                                <a href="{{path('pro_stages_stage',{id:stage.id})}}">{{stage.titre}}</a>
                            </td>
                        </div>
                        
                        <div class="col-md-4 col-xs-12">
                            <td>
                                {{stage.entreprise.nom}}
                            </td>
                        </div>
                        <div class="col-md-4 col-xs-12">
                            <td>
                                {% for formation in stage.formations %}
                                    {{formation.nomCourt}}
                                    {% if not loop.last %}
                                        et
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </div>
                    </div>
                </tr>
            </tbody>    
        {% endfor %}
    </table>
{% endblock %}